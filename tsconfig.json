{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "ES6",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
    // "resolveJsonModule": true
  },

  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },

  "exclude": ["node_modules", "**/node_modules/*"]
}
